    <h2>Contact Me</h2>

    <div id="emailLinkedIn">
      <a id="emailMe" href="mailto:bryankmcknight@yahoo.com">
        <button class="btn emailMeBtn btn-outline-primary">Email Me</button>
      </a>

      <span id="verticalSeparator">|</span>
      <div id="linkedInDiv">
        <a href="https://www.linkedin.com/in/mcknightbryan/">
          <img id="linkedInIcon" src="/img/linkedin.png" alt=""
        /></a>
      </div>
    </div>

    <hr />
    <main>
      <div class="container">
        <form method="post">
          <label for="name"
            >Name <br /><input
              type="text"
              id="name"
              name="name"
              required /></label
          ><br />
          <label for="email"
            >Email <br /><input type="email" id="email" name="email" required
          /></label>
          <br />
          <label for="subject"
            >Subject <br />
            <input
              type="text"
              name="subject"
              id="subject"
              placeholder="Optional"
          /></label>
          <br />
          <label for="message"
            >Message <br />
            <textarea name="message" id="message" required></textarea></label
          ><br />
          <br />

          <input
            type="submit"
            id="contactBtn"
            class="btn btn-outline-primary"
            value="Submit"
          />
        </form>
      </div>
    </main>

